{
  "name": "Headache",
  "description": "Edit headers",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ],
  "action": {
    "default_icon": {
      "16": "/images/headache-16.png",
      "32": "/images/headache-32.png",
      "48": "/images/headache-48.png",
      "64": "/images/headache-64.png",
      "128": "/images/headache-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Modify Header Value (HTTP Headers)"
  },
  "icons": {
    "16": "/images/headache-16.png",
    "32": "/images/headache-32.png",
    "48": "/images/headache-48.png",
    "64": "/images/headache-64.png",
    "128": "/images/headache-128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["http://*/*", "https://*/*", "*://*/*", "<all_urls>"],
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  }
}
